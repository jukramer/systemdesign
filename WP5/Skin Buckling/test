import matplotlib.pyplot as plt
import scipy as sp
import numpy as np

a=4.5

x=[0.7,0.85,1.0,1.15,1.3,1.45,1.6,1.8,2.0,2.2,2.4,2.6,2.75,2.9,3.05,3.2,3.35,3.5,3.7,3.85,4.0,4.15,4.3,4.45,4.6,4.8,5.0]
y=[10.7,7.5,6.7,6,5.8,5.5,5.5,5.1,4.9,4.7,4.5,4.5,4.6,4.5,4.4,4.4,4.4,4.3,4.3,4.3,4.2,4.2,4.2,4.1,4.1,4.1,4.1]


if 0.7<=a<=1.6:
    xint=x[0:7]
    yint=y[0:7]
    xnew=np.arange(0.7,1.59,0.001)
elif 1.6<a<=2.75:
    xint=x[6:13]
    yint=y[6:13]
    xnew=np.arange(1.6,2.75,0.001)
elif 2.75<a<=3.7:
    xint=x[12:19]
    yint=y[12:19]
    xnew=np.arange(2.75,3.7,0.001)
elif 3.7<a<=4.6:
    xint=x[18:25]
    yint=y[18:25]
    xnew=np.arange(3.7,4.6,0.001)
else:
    xint=x[24:27]
    yint=y[24:27]
    xnew=np.arange(4.6,5.0,0.001)
f=sp.interpolate.interp1d(xint,yint,kind='cubic')

ynew=f(xnew)
plt.plot(xint,yint,'o',xnew,ynew,'-')
plt.show()